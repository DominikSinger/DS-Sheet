# Server-Konfiguration
PORT=3000
NODE_ENV=development

# Noten-Verzeichnis
# Windows UNC: \\\\FILESERVER\\Musiknoten
# Linux: /srv/musiknoten
# macOS: /Volumes/Musiknoten
# Lokal für Dev: ./test-notes
NOTE_ROOT=./test-notes

# Datenbank
DB_PATH=./data/notes.db

# Basic Auth (optional, aber empfohlen für Produktion)
# Leer lassen für keine Authentifizierung
BASIC_AUTH_USER=
BASIC_AUTH_PASSWORD=

# Admin-Token für Scan-Endpunkt
ADMIN_TOKEN=change-this-secret-token

# CORS
# Komma-separierte Liste erlaubter Origins
# Für Entwicklung: http://localhost:5173
# Für Produktion: https://notes.example.com
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# File-Watcher
# Automatisches Rescan bei Dateiänderungen
FILE_WATCH_ENABLED=true

# Logging
LOG_LEVEL=info
